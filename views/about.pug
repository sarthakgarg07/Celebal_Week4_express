extends layout

block content
  .card
    h1(style="color: #667eea; margin-bottom: 20px;") #{message}
    
    .about-content
      .version-info(style="background: #e3f2fd; padding: 20px; border-radius: 10px; margin-bottom: 25px;")
        h3(style="color: #1976d2; margin-bottom: 10px;") Version Information
        p(style="font-size: 16px;") Version: #{version}
        p(style="font-size: 16px;") Description: #{description}
      
      h2(style="color: #333; margin-bottom: 15px; margin-top: 30px;") Features
      
      .features-grid(style="display: grid; gap: 15px; margin-top: 20px;")
        each feature, index in features
          .feature-card(style="background: #f8f9fa; padding: 15px; border-radius: 8px; border-left: 4px solid #28a745;")
            .feature-number(style="font-weight: bold; color: #28a745; margin-bottom: 5px;") #{index + 1}.
            .feature-text(style="color: #333;") #{feature}
    
    .actions(style="margin-top: 30px;")
      a.btn(href="/") Back to Home
      a.btn.btn-secondary(href="/users" style="margin-left: 10px;") View Users 